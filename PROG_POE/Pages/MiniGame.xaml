<Page x:Class="PROG_POE.Pages.MiniGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG_POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MiniGame">

    <Grid Margin="0,20" Background="Lavender">
        <StackPanel Background="Lavender" Grid.Column="0" Margin="0,-25,0,-20">
            <TextBlock Text="Mini Game" Foreground="BlueViolet" FontSize="40" FontWeight="Bold"
           HorizontalAlignment="Center" Margin="0,20"/>

            <TextBlock x:Name="QuestionText" TextWrapping="Wrap" FontSize="18" Margin="0,0,0,10"/>
            <StackPanel x:Name="AnswerPanel" Margin="0,0,0,10"/>
            <Button x:Name="NextButton" Content="Next" Click="NextButton_Click" IsEnabled="False" Width="100" HorizontalAlignment="Center"/>
            <TextBlock x:Name="FeedbackText" FontSize="14" Foreground="DarkGreen" Margin="0,10,0,0"/>
            <TextBlock x:Name="ScoreText" FontWeight="Bold" FontSize="16" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>

</Page>
