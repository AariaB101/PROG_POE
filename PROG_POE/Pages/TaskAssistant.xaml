<Page x:Class="PROG_POE.Pages.TaskAssistant"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG_POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaskAssistant">

    <Grid>
        <Border Background="White"
                CornerRadius="12"
                Padding="30">
            <StackPanel>
                <TextBlock Text="Task Assistant"
                           FontSize="22"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0 0 0 20"
                           Foreground="BlueViolet"/>

                <TextBlock Text="Task Title:" FontWeight="SemiBold"/>
                <TextBox x:Name="TaskTitleTextBox"
                         Margin="0,0,0,5"
                         Padding="1"
                         Background="#f8f9fa"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         FontSize="14"/>

                <TextBlock Text="Description:" FontWeight="SemiBold"/>
                <TextBox x:Name="TaskDescriptionTextBox"
                         Margin="0,0,0,5"
                         Padding="1"
                         
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Background="#f8f9fa"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         FontSize="14"/>

                <TextBlock Text="Reminder Date (Optional):" FontWeight="SemiBold"/>
                <DatePicker x:Name="ReminderDatePicker"
                            Margin="0 5 0 15"/>

                <Button Content="Add Task"
                        Click="AddTask_Click"
                        Background="BlueViolet"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,1"/>

                <TextBlock Text="Your Tasks" FontSize="18" FontWeight="Bold" Margin="5" HorizontalAlignment="Center" Foreground="BlueViolet"/>

                <ListBox x:Name="TasksListBox"
                         Background="#f8f9fa"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         FontSize="14"
                         Padding="6"
                         Height="115"/>
            </StackPanel>
        </Border>
    </Grid>
 </Page>
